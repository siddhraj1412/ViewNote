rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Actions Collection (watched, saved, paused, dropped)
    match /user_actions/{actionId} {
      // Allow users to read their own actions
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      
      // Allow users to create/update their own actions
      allow create, update: if request.auth != null && 
                               request.resource.data.userId == request.auth.uid;
      
      // Allow users to delete their own actions
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Watchlist Collection
    match /watchlist/{watchlistId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create, update: if request.auth != null && 
                               request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Ratings Collection
    match /ratings/{ratingId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create, update: if request.auth != null && 
                               request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
    }
    
    // User Profiles (optional, if you add user profiles)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
