rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ─── Helper: user owns this doc ───
    function isOwner() {
      return request.auth != null && resource.data.userId == request.auth.uid;
    }
    function isOwnerCreate() {
      return request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // ─── User Actions (legacy) ───
    match /user_actions/{actionId} {
      allow read: if isOwner();
      allow create, update: if isOwnerCreate();
      allow delete: if isOwner();
    }

    // ─── Watched ───
    match /user_watched/{docId} {
      allow read: if request.auth != null;
      allow create, update: if isOwnerCreate();
      allow delete: if isOwner();
    }

    // ─── Watchlist ───
    match /user_watchlist/{docId} {
      allow read: if request.auth != null;
      allow create, update: if isOwnerCreate();
      allow delete: if isOwner();
    }

    // ─── Paused ───
    match /user_paused/{docId} {
      allow read: if request.auth != null;
      allow create, update: if isOwnerCreate();
      allow delete: if isOwner();
    }

    // ─── Dropped ───
    match /user_dropped/{docId} {
      allow read: if request.auth != null;
      allow create, update: if isOwnerCreate();
      allow delete: if isOwner();
    }

    // ─── Ratings ───
    match /user_ratings/{docId} {
      allow read: if request.auth != null;
      allow create, update: if isOwnerCreate();
      allow delete: if isOwner();
    }

    match /user_watching/{docId} {
      allow read: if request.auth != null;
      allow create, update: if isOwnerCreate();
      allow delete: if isOwner();
    }

    match /user_series_progress/{docId} {
      allow read: if request.auth != null;
      allow create, update: if isOwnerCreate();
      allow delete: if isOwner();
    }

    // ─── Favorites ───
    match /favorites_movies/{docId} {
      allow read: if request.auth != null;
      allow create, update: if isOwnerCreate();
      allow delete: if isOwner();
    }
    match /favorites_shows/{docId} {
      allow read: if request.auth != null;
      allow create, update: if isOwnerCreate();
      allow delete: if isOwner();
    }

    // ─── Media Preferences ───
    match /user_media_preferences/{docId} {
      allow read: if isOwner();
      allow create, update: if isOwnerCreate();
      allow delete: if isOwner();
    }

    // ─── User Lists ───
    match /user_lists/{docId} {
      allow read: if true;
      allow create: if isOwnerCreate();
      allow update: if isOwner();
      allow delete: if isOwner();
    }

    // ─── Legacy collections (old names) ───
    match /watchlist/{docId} {
      allow read: if isOwner();
      allow create, update: if isOwnerCreate();
      allow delete: if isOwner();
    }
    match /ratings/{docId} {
      allow read: if isOwner();
      allow create, update: if isOwnerCreate();
      allow delete: if isOwner();
    }

    // ─── User Profiles (generic /users/) ───
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ─── User Profiles — username immutable after first set ───
    match /user_profiles/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId
                    && (
                      !('username' in resource.data) ||
                      request.resource.data.username == resource.data.username
                    )
                    && (
                      !('username_lowercase' in resource.data) ||
                      request.resource.data.username_lowercase == resource.data.username_lowercase
                    );
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // ─── Review Likes ───
    match /review_likes/{docId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // ─── Review Comments ───
    match /review_comments/{docId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // ─── List Likes ───
    match /list_likes/{docId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // ─── List Comments ───
    match /list_comments/{docId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // ─── Media Stats (aggregates used across app) ───
    match /media_stats/{docId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }
  }
}